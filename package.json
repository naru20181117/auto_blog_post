{
  "name": "auto-blog-post",
  "version": "1.0.0",
  "description": "Contentful Management API を使ったブログ記事投稿スクリプト",
  "type": "module",
  "scripts": {
    "fetch-note": "tsx scripts/fetch-note.ts",
    "fetch-youtube": "tsx scripts/fetch-youtube.ts",
    "validate": "tsx scripts/validate.ts",
    "drafts": "tsx scripts/list-drafts.ts",
    "publish": "tsx scripts/publish-article.ts",
    "publish:draft": "tsx scripts/publish-article.ts",
    "publish:live": "tsx scripts/publish-article.ts --publish",
